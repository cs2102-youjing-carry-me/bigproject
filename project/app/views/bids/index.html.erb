<p id="notice"><%= notice %></p>

<h1>Bids</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Stuff create time</th>
      <th>Owner</th>
      <th>Bidder</th>
      <th>Bidding points</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bids.each do |bid| %>
      <tr>
        <td><%= bid.stuff_create_time %></td>
        <td><%= bid.owner_username %></td>
        <td><%= bid.bidder_username %></td>
        <td><%= bid.bidding_points %></td>
        <td><%= link_to 'Show', bid %></td>
        <% if current_user.isAdmin || bid.owner_username == current_user.username %>
          <td><%= link_to 'Edit', edit_bid_path(bid) %></td>
          <td><%= link_to 'Destroy', bid, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
